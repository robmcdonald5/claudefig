Screen {
    background: $surface;
}

#main-container {
    width: 100%;
    height: 100%;
}

#menu-panel {
    width: 40;
    height: 100%;
    padding: 1 2;
}

#title {
    text-style: bold;
    color: $accent;
    margin-bottom: 0;
    margin-top: 1;
}

#version {
    color: $text-muted;
    margin-bottom: 2;
}

#menu-buttons {
    width: 100%;
    height: auto;
    border: round $primary;
    padding: 1;
}

/* Menu navigation buttons (main tree) - Keep original styles */
#menu-buttons Button {
    width: 100%;
    margin: 0;
    height: 3;
    padding: 0 1;
    background: $panel;
    border: none;
}

#menu-buttons Button:hover {
    background: $primary;
    border: none;
}

#menu-buttons Button:focus {
    text-style: bold;
    border: solid $accent;
    background: $panel;
}

#menu-buttons Button.active {
    background: $accent;
    color: $text;
    text-style: bold;
    border: none;
}

#menu-buttons Button.active:focus {
    background: $accent;
    color: $text;
    text-style: bold;
    border: solid $primary-lighten-2;
}

/* Base button styles for content panels and modals */
#content-panel Button,
.dialog-actions Button,
.instance-actions Button,
.button-row Button {
    min-height: 3;
    padding: 0 2;
    background: $panel;
    border: none;
    min-width: 10;
}

#content-panel Button:hover,
.dialog-actions Button:hover,
.instance-actions Button:hover,
.button-row Button:hover {
    background: $primary;
    border: none;
}

#content-panel Button:focus,
.dialog-actions Button:focus,
.instance-actions Button:focus,
.button-row Button:focus {
    border: none;
    background: $primary;
    text-style: bold;
}

#content-panel Button:focus:hover,
.dialog-actions Button:focus:hover,
.instance-actions Button:focus:hover,
.button-row Button:focus:hover {
    border: none;
    background: $primary;
    text-style: bold;
}

#content-panel {
    display: none;
    width: 1fr;
    height: 100%;
    border-left: solid $primary;
    padding: 2 4;
}

#content-panel.visible {
    display: block;
}

/* Settings Panel Styles */
#settings-container {
    width: 100%;
    height: 100%;
}

#settings-categories {
    width: 30;
    height: auto;
    border: round $primary;
    padding: 1;
    margin: 4 1 0 2;
}

.category-button {
    width: 100%;
    margin-bottom: 0;
    text-align: left;
    border: none;
    min-height: 1;
    padding: 0 1;
}

.category-button:hover {
    background: $primary;
    border: none;
}

.category-button:focus {
    border: solid $accent;
    background: $panel;
}

.category-button.active {
    background: $accent-darken-1;
    color: $text;
    border: none;
}

.category-button.active:focus {
    background: $accent-darken-1;
    color: $text;
    border: solid $accent;
}

#settings-content {
    width: 1fr;
    height: 100%;
    padding: 0 2;
    overflow-y: auto;
}

.section-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 0;
    margin-top: 1;
}

.section-subtitle {
    color: $text-muted;
    margin-bottom: 2;
}

SettingItem {
    width: 100%;
    height: auto;
    margin-bottom: 2;
    layout: vertical;
}

.setting-label {
    text-style: bold;
    color: $text;
}

.setting-description {
    color: $text-muted;
    margin-bottom: 1;
}

#save-notification {
    dock: bottom;
    align: right top;
    padding: 1 2;
    background: $success;
    color: $text;
    border: solid $success-darken-1;
    display: none;
    width: auto;
    height: auto;
    margin-right: 2;
}

/* Initialize Panel Styles */
InitializePanel VerticalScroll {
    scrollbar-size: 1 1;
    scrollbar-background: $panel;
    scrollbar-color: $primary;
    overflow-x: hidden;
}

.panel-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    margin-top: 1;
}

.panel-info {
    color: $text-muted;
    margin-bottom: 2;
}

.config-summary-title {
    text-style: bold;
    margin-bottom: 1;
}

.config-summary {
    color: $text-muted;
    margin-bottom: 2;
    padding: 1;
    background: $panel;
    border: solid $primary-lighten-1;
}

.button-row {
    width: 100%;
    height: auto;
    margin-top: 2;
    align: left middle;
}

.button-row Button {
    width: auto;
    margin-right: 2;
    min-width: 15;
}

.placeholder {
    color: $text-muted;
    text-align: center;
    margin-top: 4;
}

#view-claude {
    display: none;
}

/* Presets Panel Styles */
#preset-select {
    width: 100%;
    margin-bottom: 2;
    margin-top: 1;
}

/* Config Panel Styles */
.file-type-section {
    width: 100%;
    height: auto;
    margin-bottom: 3;
}

.section-header {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
}

.instance-item {
    width: 100%;
    height: auto;
    margin-bottom: 1;
    padding: 1;
    border: round $primary-lighten-1;
    background: $panel;
}

.instance-path {
    text-style: bold;
    color: $text;
}

.instance-preset {
    color: $text-muted;
}

.instance-status {
    margin-bottom: 1;
}

.instance-enabled {
    color: $success;
}

.instance-disabled {
    color: $text-muted;
}

.instance-actions {
    width: 100%;
    height: auto;
    align: left middle;
}

.instance-button {
    width: auto;
    margin-right: 1;
    min-width: 10;
}

.add-instance-button {
    width: 100%;
    margin-top: 1;
    min-height: 3;
}

.panel-subtitle {
    color: $text-muted;
    margin-bottom: 2;
}

/* Dialog/Modal Styles */
#dialog-container {
    width: 80;
    height: auto;
    max-height: 90%;
    border: thick $primary;
    background: $surface;
    padding: 2;
}

.dialog-header {
    text-style: bold;
    color: $accent;
    margin-bottom: 2;
}

#dialog-content {
    height: auto;
    max-height: 30;
    margin-bottom: 2;
}

.dialog-text {
    color: $text;
    margin-bottom: 1;
}

.dialog-section-title {
    text-style: bold;
    margin-top: 1;
    margin-bottom: 1;
}

.dialog-label {
    text-style: bold;
    margin-bottom: 1;
    margin-top: 1;
}

.dialog-warning {
    color: $warning;
    text-style: bold;
}

.dialog-error {
    color: $error;
    text-style: bold;
}

.dialog-actions {
    width: 100%;
    height: auto;
    align: center middle;
}

.dialog-actions Button {
    width: auto;
    margin: 0 1;
    min-width: 15;
}

/* Button variants for content buttons */
#content-panel Button.-primary,
#content-panel Button.primary,
.dialog-actions Button.-primary,
.dialog-actions Button.primary,
.instance-actions Button.-primary,
.instance-actions Button.primary,
.button-row Button.-primary,
.button-row Button.primary {
    background: $accent;
    color: $text;
    border: none;
}

#content-panel Button.-primary:hover,
#content-panel Button.primary:hover,
.dialog-actions Button.-primary:hover,
.dialog-actions Button.primary:hover,
.instance-actions Button.-primary:hover,
.instance-actions Button.primary:hover,
.button-row Button.-primary:hover,
.button-row Button.primary:hover {
    background: $accent-lighten-1;
    border: none;
}

#content-panel Button.-primary:focus,
#content-panel Button.primary:focus,
.dialog-actions Button.-primary:focus,
.dialog-actions Button.primary:focus,
.instance-actions Button.-primary:focus,
.instance-actions Button.primary:focus,
.button-row Button.-primary:focus,
.button-row Button.primary:focus {
    background: $accent;
    border: none;
    text-style: bold;
}

#content-panel Button.-primary:focus:hover,
#content-panel Button.primary:focus:hover,
.dialog-actions Button.-primary:focus:hover,
.dialog-actions Button.primary:focus:hover,
.instance-actions Button.-primary:focus:hover,
.instance-actions Button.primary:focus:hover,
.button-row Button.-primary:focus:hover,
.button-row Button.primary:focus:hover {
    background: $accent-lighten-1;
    border: none;
    text-style: bold;
}

#content-panel Button:disabled,
.dialog-actions Button:disabled,
.instance-actions Button:disabled,
.button-row Button:disabled {
    opacity: 0.5;
    background: $panel;
    border: none;
    color: $text-muted;
}

#content-panel Button:disabled:hover,
.dialog-actions Button:disabled:hover,
.instance-actions Button:disabled:hover,
.button-row Button:disabled:hover {
    background: $panel;
    border: none;
    color: $text-muted;
}

Input {
    width: 100%;
    margin-bottom: 1;
}

Select {
    width: 100%;
    margin-bottom: 1;
}

#validation-feedback {
    margin-top: 2;
    padding: 1;
    border: round $primary-lighten-1;
    min-height: 3;
}
