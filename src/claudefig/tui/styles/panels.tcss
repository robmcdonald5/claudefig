/* ============================================================================ */
/* PANEL STYLES - Settings, Initialize, Presets, Config panels                  */
/* ============================================================================ */

/* Settings Panel Styles */
#settings-container {
    width: 100%;
    height: 100%;
}

#settings-categories {
    width: 30;
    height: auto;
    border: round $primary;
    padding: 1;
    margin: 4 1 0 2;
}

.category-button {
    width: 100%;
    margin-bottom: 0;
    text-align: left;
    border: none;
    min-height: 1;
    padding: 0 1;
}

.category-button:hover {
    background: $primary;
    border: none;
}

.category-button:focus {
    border: solid $accent;
    background: $panel;
}

.category-button.active {
    background: $accent-darken-1;
    color: $text;
    border: none;
}

.category-button.active:focus {
    background: $accent-darken-1;
    color: $text;
    border: solid $accent;
}

#settings-content {
    width: 1fr;
    height: 100%;
    padding: 0 2;
    overflow-y: auto;
}

.section-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 0;
    margin-top: 1;
}

.section-subtitle {
    color: $text-muted;
    margin-bottom: 2;
}

SettingItem {
    width: 100%;
    height: auto;
    margin-bottom: 2;
    layout: vertical;
}

.setting-label {
    text-style: bold;
    color: $text;
}

.setting-description {
    color: $text-muted;
    margin-bottom: 1;
}

#save-notification {
    dock: bottom;
    align: right top;
    padding: 1 2;
    background: $success;
    color: $text;
    border: solid $success-darken-1;
    display: none;
    width: auto;
    height: auto;
    margin-right: 2;
}

/* ============================================================================ */
/* Initialize Panel Styles                                                       */
/* ============================================================================ */

.panel-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    margin-top: 1;
    width: 100%;
    max-width: 100%;
}

.panel-info {
    color: $text-muted;
    margin-bottom: 1;
    width: auto;  /* Use auto for content-based sizing */
    max-width: 100%;
    /* IMPORTANT: Each Label with this class must be â‰¤35 terminal cells to avoid
       Textual layout bug that causes parent container borders to stretch.
       NO EMOJIS - they take 2+ cells and break the limit!
       See DEBUG_UI_BORDER_BUG.md for details. */
}

.config-summary-title {
    text-style: bold;
    margin-bottom: 1;
}

.config-summary {
    color: $text-muted;
    margin-bottom: 2;
    padding: 1;
    background: $panel;
    border: solid $primary-lighten-1;
}

.button-row {
    width: 100%;
    height: auto;
    margin-top: 2;
    align: left middle;
}

.button-row Button {
    width: auto;
    margin-right: 2;
    min-width: 15;
}

.placeholder {
    color: $text-muted;
    text-align: left;
    margin-top: 4;
}

#view-claude {
    display: none;
}

/* ============================================================================ */
/* Presets Panel Styles                                                          */
/* ============================================================================ */

#preset-select {
    width: 100%;
    margin-bottom: 2;
    margin-top: 1;
}

/* ============================================================================ */
/* Config Panel Styles                                                           */
/* ============================================================================ */

.config-section {
    width: 100%;
    height: auto;
    border: round $primary;
    padding: 2;
    margin: 2 0;
    background: $panel;
}

#project-settings-section {
    border: solid $accent;
}

#file-instances-section {
    border: solid $primary;
}

.setting-label {
    text-style: bold;
    color: $accent;
    margin-top: 2;
    margin-bottom: 1;
}

.setting-sublabel {
    color: $text;
    margin-top: 1;
    margin-bottom: 0;
}

.setting-row {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 2;
}

.setting-row Switch {
    margin-right: 2;
}

.setting-description {
    color: $text-muted;
}

#config-content {
    width: 100%;
    height: auto;
    max-height: 40%;
    overflow-y: auto;
    padding: 1 0;
    margin: 2 0;
}

.file-type-section {
    width: 100%;
    height: auto;
    margin-bottom: 3;
}

.section-header {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
}

.panel-subtitle {
    color: $text-muted;
    margin-bottom: 2;
}

/* ============================================================================ */
/* Compact Config Panel Styles                                                   */
/* ============================================================================ */

/* Header with title and action buttons */
.config-header {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 1;
    border-bottom: solid $primary;
    padding-bottom: 1;
}

.config-header-info {
    width: 1fr;
}

.header-actions {
    width: auto;
    height: auto;
    align: right middle;
}

.header-btn {
    margin-left: 1;
    min-width: 12;
}

/* 2-column grid layout */
#config-top-grid {
    grid-size: 2 1;
    grid-columns: 1fr 1fr;
    grid-rows: auto;
    width: 100%;
    height: auto;
    margin-bottom: 2;
    padding: 0;
}

.config-column {
    width: 100%;
    height: auto;
    padding: 2;
    margin: 0 1;
    background: $panel;
}

#project-settings-col {
    border: round $accent;
}

#single-instance-col {
    border: round $primary;
}

/* Compact labels and inputs */
.compact-label {
    text-style: bold;
    color: $accent;
    margin-top: 1;
    margin-bottom: 0;
}

.compact-input {
    width: 100%;
    margin-bottom: 1;
    height: 3;
}

.compact-setting-row {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 1;
}

.compact-setting-row Switch {
    margin-right: 1;
}

.compact-description {
    color: $text-muted;
}

.save-btn {
    width: 100%;
    margin-top: 2;
}

/* Multi-instance section with tabs */
#multi-instance-section {
    width: 100%;
    height: auto;
    border: round $primary;
    padding: 2;
    margin: 0;
    background: $panel;
}

#file-type-tabs {
    width: 100%;
    height: auto;
    max-height: 30;
    margin-top: 1;
}

.tab-content {
    width: 100%;
    height: auto;
    max-height: 25;
    overflow-y: auto;
    padding: 1;
}

.tab-placeholder {
    color: $text-muted;
    text-align: center;
    margin: 2;
}

.add-instance-btn {
    width: 100%;
    margin-top: 1;
}

/* ============================================================================ */
/* Category Navigation System                                                    */
/* ============================================================================ */

/* Minimal header for category-based layout */
.config-header-minimal {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 1;
    padding-bottom: 1;
    border-bottom: solid $primary;
}

.panel-subtitle-inline {
    color: $text-muted;
    margin-left: 2;
}

/* Category navigation bar */
#category-nav {
    width: 100%;
    height: auto;
    align: center middle;
    margin-bottom: 2;
    padding: 1;
    background: $panel;
    border: round $primary;
}

/* Category navigation buttons */
.category-button {
    width: auto;
    min-width: 18;
    height: 3;
    margin: 0 1;
    padding: 0 2;
    background: $surface;
    border: solid $primary-lighten-1;
    color: $text-muted;
}

.category-button:hover {
    background: $primary;
    border: solid $primary-lighten-1;
    color: $text;
}

.category-button:focus {
    background: $primary;
    border: solid $accent;
    text-style: bold;
    color: $text;
}

.category-button.active {
    background: $accent;
    border: solid $accent-lighten-1;
    color: $text;
    text-style: bold;
}

.category-button.active:hover {
    background: $accent-lighten-1;
    border: solid $accent-lighten-2;
}

.category-button.active:focus {
    background: $accent;
    border: solid $accent-lighten-2;
    text-style: bold;
}

/* Category content container */
#category-content {
    width: 100%;
    height: auto;
    padding: 2;
}
