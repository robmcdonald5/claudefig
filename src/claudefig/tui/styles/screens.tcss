/* ============================================================================ */
/* SCREEN STYLES - Dialogs, modals, and screen-specific styling                 */
/* ============================================================================ */

/* Dialog/Modal Styles */
#dialog-container {
    width: 80;
    height: auto;
    max-height: 90%;
    border: thick $primary;
    background: $surface;
    padding: 2;
}

.dialog-header {
    text-style: bold;
    color: $accent;
    margin-bottom: 2;
}

#dialog-content {
    height: auto;
    max-height: 30;
    margin-bottom: 2;
}

.dialog-text {
    color: $text;
    margin-bottom: 1;
}

.dialog-section-title {
    text-style: bold;
    margin-top: 1;
    margin-bottom: 1;
}

.dialog-label {
    text-style: bold;
    margin-bottom: 1;
    margin-top: 1;
}

.dialog-warning {
    color: $warning;
    text-style: bold;
}

.dialog-error {
    color: $error;
    text-style: bold;
}

.dialog-actions {
    width: 100%;
    height: auto;
    align: left middle;
}

.dialog-actions Button {
    width: auto;
    margin: 0 1;
    min-width: 15;
}

/* ============================================================================ */
/* Button Variants for Content Buttons                                           */
/* ============================================================================ */

#content-panel Button.-primary,
#content-panel Button.primary,
.dialog-actions Button.-primary,
.dialog-actions Button.primary,
.wizard-actions Button.-primary,
.wizard-actions Button.primary,
.instance-actions Button.-primary,
.instance-actions Button.primary,
.button-row Button.-primary,
.button-row Button.primary {
    background: $accent;
    color: $text;
    border: none;
}

#content-panel Button.-primary:hover,
#content-panel Button.primary:hover,
.dialog-actions Button.-primary:hover,
.dialog-actions Button.primary:hover,
.wizard-actions Button.-primary:hover,
.wizard-actions Button.primary:hover,
.instance-actions Button.-primary:hover,
.instance-actions Button.primary:hover,
.button-row Button.-primary:hover,
.button-row Button.primary:hover {
    background: $accent-lighten-1;
    border: none;
}

#content-panel Button.-primary:focus,
#content-panel Button.primary:focus,
.dialog-actions Button.-primary:focus,
.dialog-actions Button.primary:focus,
.wizard-actions Button.-primary:focus,
.wizard-actions Button.primary:focus,
.instance-actions Button.-primary:focus,
.instance-actions Button.primary:focus,
.button-row Button.-primary:focus,
.button-row Button.primary:focus {
    background: $accent;
    border: none;
    text-style: bold;
}

#content-panel Button.-primary:focus:hover,
#content-panel Button.primary:focus:hover,
.dialog-actions Button.-primary:focus:hover,
.dialog-actions Button.primary:focus:hover,
.wizard-actions Button.-primary:focus:hover,
.wizard-actions Button.primary:focus:hover,
.instance-actions Button.-primary:focus:hover,
.instance-actions Button.primary:focus:hover,
.button-row Button.-primary:focus:hover,
.button-row Button.primary:focus:hover {
    background: $accent-lighten-1;
    border: none;
    text-style: bold;
}

#content-panel Button:disabled,
.dialog-actions Button:disabled,
.wizard-actions Button:disabled,
.instance-actions Button:disabled,
.button-row Button:disabled {
    opacity: 0.5;
    background: $panel;
    border: none;
    color: $text-muted;
}

#content-panel Button:disabled:hover,
.dialog-actions Button:disabled:hover,
.wizard-actions Button:disabled:hover,
.instance-actions Button:disabled:hover,
.button-row Button:disabled:hover {
    background: $panel;
    border: none;
    color: $text-muted;
}

/* ============================================================================ */
/* Category Content Styles                                                       */
/* ============================================================================ */

.category-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 2;
    text-align: center;
}

.category-subtitle {
    color: $text-muted;
    margin-bottom: 2;
    text-align: center;
}

.category-section-header {
    text-style: bold;
    color: $accent;
    margin-top: 2;
    margin-bottom: 1;
}

.overview-stats {
    width: 100%;
    height: auto;
    padding: 2;
    margin-bottom: 2;
    background: $panel;
    border: round $primary-lighten-1;
}

.stat-item {
    color: $text;
    margin-bottom: 1;
}

.quick-actions {
    width: 100%;
    height: auto;
    align: center middle;
}

.overview-action-btn {
    width: 80%;
    margin: 1;
    min-height: 3;
}

/* Project Settings Category Styles */
.setting-label-cat {
    text-style: bold;
    color: $accent;
    margin-top: 2;
    margin-bottom: 1;
}

.setting-sublabel-cat {
    color: $text;
    margin-top: 1;
    margin-bottom: 0;
}

.setting-row-cat {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 2;
}

.setting-row-cat Switch {
    margin-right: 2;
}

.setting-desc-cat {
    color: $text-muted;
}

.setting-input {
    width: 100%;
    margin-bottom: 2;
}

.save-settings-btn {
    width: 100%;
    margin-top: 2;
    min-height: 3;
}

/* Core Files Category Styles */
.core-file-control {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 2;
    padding: 1;
    border: round $primary-lighten-1;
    background: $surface;
}

.core-file-control Switch {
    margin-right: 1;
}

/* File Instances Category Styles */
#file-type-tabs-cat {
    width: 100%;
    height: auto;
    max-height: 30;
    margin-top: 2;
}

.tab-content-cat {
    width: 100%;
    height: auto;
    max-height: 25;
    overflow-y: auto;
    padding: 1;
}

.tab-placeholder-cat {
    color: $text-muted;
    text-align: center;
    margin: 2;
}

.file-instance-item-cat {
    margin-bottom: 1;
    padding: 1;
}

.add-instance-btn-cat {
    width: 100%;
    margin-top: 1;
}

/* ============================================================================ */
/* Config Menu Styles                                                            */
/* ============================================================================ */

#config-menu-grid {
    grid-size: 2 2;
    grid-columns: 1fr 1fr;
    grid-rows: auto auto;
    grid-gutter: 1 1;
    width: 100%;
    height: auto;
    padding: 2;
}

.config-menu-button {
    width: 100%;
    height: 5;
    padding: 1;
    background: $accent;
    color: $text;
    text-style: bold;
    border: round $accent-lighten-1;
    content-align: center middle;
}

.config-menu-button:hover {
    background: $accent-lighten-1;
    border: round $accent-lighten-2;
}

.config-menu-button:focus {
    background: $accent;
    border: solid $primary;
    text-style: bold;
}

/* ============================================================================ */
/* New Screen Styles                                                             */
/* ============================================================================ */

/* Common screen styles */
#overview-screen,
#project-settings-screen,
#core-files-screen {
    width: 100%;
    height: 100%;
    padding: 2 4;
    background: $surface;
}

/* File instances screen needs auto height to prevent excessive stretching */
#file-instances-screen {
    width: 100%;
    height: auto;
    padding: 2 4;
    background: $surface;
}

.screen-title {
    text-style: bold;
    color: $accent;
    text-align: center;
    margin-bottom: 1;
}

.screen-description {
    color: $text-muted;
    text-align: center;
    margin-bottom: 2;
}

.screen-footer {
    width: 100%;
    height: auto;
    margin-top: 2;
    align: left middle;
}

.screen-footer Button {
    margin-right: 1;
    min-width: 15;
    min-height: 3;
    padding: 0 2;
    background: $panel;
    border: none;
}

.screen-footer Button:hover {
    background: $primary;
    border: none;
}

.screen-footer Button:focus {
    border: none;
    background: $primary;
    text-style: bold;
}

.screen-footer Button.-primary,
.screen-footer Button.primary {
    background: $accent;
    color: $text;
}

.screen-footer Button.-primary:hover,
.screen-footer Button.primary:hover {
    background: $accent-lighten-1;
}

.screen-footer Button.-primary:focus,
.screen-footer Button.primary:focus {
    background: $accent;
    text-style: bold;
}

/* ============================================================================ */
/* Overview Screen Styles                                                        */
/* ============================================================================ */

.overview-info-line {
    width: 100%;
    color: $text;
    margin-bottom: 1;
}

/* Overview screen - Section headers within dropdowns */
.overview-section-header {
    text-style: bold;
    margin-bottom: 1;
}

.overview-section-header.error {
    color: $error;
}

.overview-section-header.warning {
    color: $warning;
}

/* Status item colors */
.overview-error-item {
    color: $error;
    margin-bottom: 0;
}

.overview-warning-item {
    color: $warning;
    margin-bottom: 0;
}

.overview-healthy-item {
    color: $success;
    margin-bottom: 0;
}

/* File status indicators */
.file-enabled {
    color: $success;
    width: 100%;
}

.file-disabled {
    color: $text-muted;
    text-style: italic;
    width: 100%;
}

.overview-actions-header {
    text-style: bold;
    color: $accent;
    margin-top: 2;
    margin-bottom: 1;
}

.overview-action-buttons {
    width: 100%;
    height: auto;
    align: center middle;
    margin-bottom: 2;
}

.overview-action-buttons Button {
    width: auto;
    min-width: 20;
    margin: 0 1;
}

/* ============================================================================ */
/* Project Settings Screen Styles                                                */
/* ============================================================================ */

.compact-settings-list {
    width: 100%;
    height: auto;
    padding: 1;
    margin-top: 1;
}

.compact-setting-row {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 2;
    padding: 1;
    background: $panel;
    border: round $primary-lighten-1;
}

.compact-setting-row Switch {
    margin-right: 2;
}

.compact-setting-info {
    width: 1fr;
    height: auto;
}

.compact-setting-label {
    text-style: bold;
    color: $text;
    margin-bottom: 0;
}

.compact-setting-desc {
    color: $text-muted;
    margin-top: 0;
}

.compact-setting-input-row {
    width: 100%;
    height: auto;
    margin-bottom: 2;
    padding: 1;
    background: $panel;
    border: round $primary-lighten-1;
}

.compact-setting-input-row .compact-setting-label {
    margin-bottom: 1;
}

.compact-setting-input-row .compact-input {
    margin-bottom: 0;
}

.compact-setting-input-row .compact-setting-desc {
    margin-top: 1;
}

/* ============================================================================ */
/* Initialization Settings Screen Styles                                         */
/* ============================================================================ */

.init-settings-list {
    width: 100%;
    height: auto;
    padding: 0;
    margin-top: 1;
}

.init-setting-row {
    width: 100%;
    height: auto;
    align: left middle;
    margin-bottom: 1;  /* Reduced from 2 */
    padding: 0 1;      /* Much smaller padding */
    background: transparent;  /* No background */
    border: none;      /* No border */
}

.init-setting-row Switch {
    margin-right: 2;
}

.init-setting-info {
    width: 1fr;
    height: auto;
}

.init-setting-label {
    text-style: bold;
    color: $text;
    margin-bottom: 0;
}

.init-setting-desc {
    color: $text-muted;
    margin-top: 0;
}

/* ============================================================================ */
/* Core Files Screen Styles                                                      */
/* ============================================================================ */

.core-files-list {
    width: 100%;
    height: auto;
    padding: 0;  /* Remove padding for more compact layout */
    margin-top: 1;
}

.screen-description {
    color: $text-muted;
    text-align: center;
    margin-bottom: 1;  /* Reduced from 2 to be more compact */
}
